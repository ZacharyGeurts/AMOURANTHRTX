#version 460
#extension GL_EXT_ray_tracing : require

layout(set = 0, binding = 7) uniform sampler3D densityVolume;

void main() {
    vec3 pos = gl_WorldRayOriginEXT + gl_WorldRayDirectionEXT * gl_HitTEXT;
    float density = texture(densityVolume, pos * 0.5 + 0.5).r;
    if (density < 0.1) {
        ignoreIntersectionEXT;
    }
}